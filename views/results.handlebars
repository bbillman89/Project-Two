<div class="container mt-3">
    <div class="row justify-content-center">
        <form class="form-group row justify-content-center">

            {{!-- add drop down --}}
            <div class="dropdown">
                <button class="btn bg-light text-dark dropdown-toggle" type="button" data-toggle="dropdown">Patient
                    Search
                    <span class=""></span></button>
                <ul class="dropdown-menu">
                    {{#each patients}}
                    <li data-id="{{id}}" class="list-group-item">
                        <a href="/result/{{patient_id}}"> {{first_name}} {{last_name}}</a>
